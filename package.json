{
  "name": "youtracker",
  "productName": "YouTracker",
  "version": "1.0.0",
  "description": "",
  "main": "build/main/main.js",
  "scripts": {
    "build": "babel src --out-dir build --copy-files",
    "rebuild-native": "./node_modules/.bin/electron-rebuild",
    "start": "npm run build && electron .",
    "publish": "npm run build && build --mac --win --linux --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2",
    "electron-rebuild": "^1.8.5"
  },
  "dependencies": {
    "electron-store": "^3.2.0",
    "electron-updater": "^4.1.2",
    "keytar": "^4.9.0",
    "node-fetch": "^2.6.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "build": {
    "appId": "ru.smarthead.YouTracker",
    "extraMetadata": {
      "main": "build/main/main.js"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "s3",
      "bucket": "youtracker.smarthead.ru"
    },
    "mac": {
      "darkModeSupport": true,
      "target": "dmg",
      "artifactName": "${productName}.${ext}"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-installer.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}.${ext}"
    }
  }
}
